<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.spider.ylt.dao.StockBaseInfoDao">

    <resultMap id="stockInfo" type="com.common.ylt.model.StockInfo">
        <result column="STOCK_CODE" property="stockCode" jdbcType="VARCHAR"/>
        <result column="STOCK_NAME" property="stockName" jdbcType="VARCHAR"/>
        <result column="BLOCK_ID" property="blockId" jdbcType="VARCHAR"/>
        <result column="ZXBS" property="zxbs" jdbcType="TIMESTAMP"/>
        <result column="STOCK_ORG_CODE" property="stockOrgCode" jdbcType="VARCHAR"/>
        <result column="STOCK_ORG_NAME" property="stockOrgName" jdbcType="VARCHAR"/>
        <result column="LRRQ" property="lrrq" jdbcType="TIMESTAMP"/>
        <result column="XGRQ" property="xgrq" jdbcType="TIMESTAMP"/>
        <result column="YXBJ" property="yxbj" jdbcType="VARCHAR"/>
    </resultMap>
    
    <select id="queryStockInfo" resultMap="stockInfo">
      select  STOCK_CODE,
		      STOCK_NAME,
		      BLOCK_ID,
		      ZXBS,
		      STOCK_ORG_CODE,
		      STOCK_ORG_NAME
		      from stock_info
		      where yxbj = 1
    </select>


</mapper>
